<?xml version="1.0" encoding="utf-8"?>
<manifest package="cat.santi.ttfe"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="cat.santi.ttfe.Presentation"
        android:allowBackup="true"
        android:icon="@mipmap/ttfe__ic_launcher"
        android:label="@string/ttfe__app_name"
        android:theme="@style/TTFE__AppTheme">
        <activity
            android:name="cat.santi.ttfe.activity.MainActivity"
            android:label="@string/ttfe__app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>