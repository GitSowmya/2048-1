<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <cat.santi.ttfe.view.TilesGridView
        android:id="@+id/ttfe__fragment_main__gv_tiles"
        style="@style/TTFE__MainFragment.GameBoard"
        android:layout_width="@dimen/ttfe__grid_item_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/ttfe__fragment_main__iv_logo"
        style="@style/TTFE__MainFragment.Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/ttfe__fragment_main__tv_turn"
        style="@style/TTFE__MainFragment.Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttfe__fragment_main__iv_logo"
        android:layout_toLeftOf="@id/ttfe__fragment_main__gv_tiles"/>

    <TextView
        android:id="@+id/ttfe__fragment_main__tv_score"
        style="@style/TTFE__MainFragment.Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttfe__fragment_main__tv_turn"
        android:layout_toLeftOf="@id/ttfe__fragment_main__gv_tiles"/>

    <TextView
        android:id="@+id/ttfe__fragment_main__tv_game_state"
        style="@style/TTFE__MainFragment.Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttfe__fragment_main__tv_score"
        android:layout_toLeftOf="@id/ttfe__fragment_main__gv_tiles"/>

    <TextView
        android:id="@+id/ttfe__fragment_main__tv_status"
        style="@style/TTFE__MainFragment.Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttfe__fragment_main__tv_game_state"
        android:layout_toLeftOf="@id/ttfe__fragment_main__gv_tiles"/>

</RelativeLayout>